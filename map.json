{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
    "title": "SKI RESORTS IN EUROPE",
    "width": 800,
    "height": 600,
    "projection": {
        "type": "mercator",
        "scale": "350",
        "center":["30","55"],
        "clipExtent": [[0, 0], [600, 800]]
    },
    "properties":{"title":"Europe (Mercator)",
    "width":"400", "height":"300"}
    ,
    "layer": [
      {
        "data":{
          "url":"https://raw.githubusercontent.com/thedevLEGEND27/data-viz-2.github.io/main/ne_50m_ocean.json",
          "format": {
            "type":"topojson",
            "feature": "ne_50m_ocean"
          }
      },
        "mark":{
          "type": "geoshape",
          "fill":"skyblue"
        }
      },
      {
      "data": {
        "url": "https://raw.githubusercontent.com/thedevLEGEND27/data-viz-2.github.io/main/ne_50m_admin_0_countries.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "whitesmoke",
        "stroke": "darkgrey"
      },
      "width": 800,
      "height": 500
      },
      { 
        "data":{
          "url":"https://raw.githubusercontent.com/thedevLEGEND27/data-viz-2/main/ne_50m.json",
          "format": {
            "type":"topojson",
            "feature": "ne_50m_admin_0_countries"
          }
        },
        "transform": [
            {
                "lookup": "properties.NAME",
                "from":{
                    "data":{
                        "url": "https://raw.githubusercontent.com/thedevLEGEND27/data-viz-2.github.io/main/europe.csv"
                    },
                    "key": "Country",
                    "fields": [
                        "HighestPoint"
                    ]
                }
            },
            {"calculate": "datum.DayPassPriceAdult + 0.1", "as": "Day Pass"}
        ],
        "mark":{
            "type": "geoshape",
            "stroke": "black",
            "strokeWidth": 0.5
        },
        "encoding": {
            "color":{
                "field": "HighestPoint",
                "type": "quantitative",
                "title": "# Of resorts",
                "scale":{
                    "type": "threshold",
                    "domain":[100,1000,2000,5000]

                }
            }
        }
      }
    ]
  }