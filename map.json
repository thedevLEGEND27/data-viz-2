{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
    "title": "SKI RESORTS IN EUROPE",
    "width": 800,
    "height": 1000,
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data":{
          "url":"ne_50m.json",
          "format": {
            "type":"topojson",
            "feature": "ne_50m_admin_0_countries"
          }
        },
        "transform": [
            {
                "lookup": "properties.NAME",
                "from":{
                    "data":{
                        "url": "European_Ski_Resorts.csv"
                    },
                    "key": "Country",
                    "fields": ["DayPassPriceAdult"]
                }
            }
        ],
        "mark":{
            "type": "geoshape",
            "stroke": "black",
            "strokeWidth": 0.5
        },
        "encoding": {
            "color":{
                "field": "Country Number of Resorts",
                "type": "quantitative",
                "title": "# Of resorts",
                "scale":{
                    "type": "threshold",
                    "domain":[5,10,50,100,500]

                }
            }
        }
      }
    ]
  }