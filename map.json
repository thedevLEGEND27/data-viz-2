{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json", 
    "title": "SKI RESORTS IN EUROPE",
    "width": 800,
    "height": 400,
    "projection": {
        "type": "mercator"
    },
    "layer": [
      {
      "data": {
        "url": "https://raw.githubusercontent.com/thedevLEGEND27/data-viz-2.github.io/main/ne_50m_admin_0_countries.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "darkgrey"
      },
      "width": 800,
      "height": 600
      },
      { 
        "data":{
          "url":"https://raw.githubusercontent.com/thedevLEGEND27/data-viz-2/main/ne_50m.json",
          "format": {
            "type":"topojson",
            "feature": "ne_50m_admin_0_countries"
          }
        },
        "transform": [
            {
                "lookup": "properties.NAME",
                "from":{
                    "data":{
                        "url": "https://raw.githubusercontent.com/thedevLEGEND27/data-viz-2.github.io/main/europe.csv"
                    },
                    "key": "Country",
                    "fields": [
                        "DayPassPriceAdult"
                    ]
                }
            },
            {"calculate": "datum.DayPassPriceAdult + 0.1", "as": "Active Cases"}
        ],
        "mark":{
            "type": "geoshape",
            "stroke": "black",
            "strokeWidth": 0.5
        },
        "encoding": {
            "color":{
                "field": "DayPassPriceAdult",
                "type": "quantitative",
                "title": "# Of resorts",
                "scale":{
                    "type": "threshold",
                    "domain":[5,10,50,100,500]

                }
            }
        }
      }
    ]
  }